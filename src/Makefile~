all: aGREP.cpp	
	sudo wget http://repo.enetres.net/enetres.repo -O /etc/yum.repos.d/enetres.repo
	sudo yum install boost-devel
	g++  aGREP.cpp findinfile.cpp folderWalk.cpp help.cpp -o aGREP -lboost_program_options -lboost_regex -std=c++11
install: aGREP
	sudo cp aGREP /usr/bin
	rm aGREP
uninstall: 
	sudo rm /usr/bin/aGREP
